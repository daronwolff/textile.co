<div class="card">
  <div class="card-content">
    <h4>Listing Departments</h4>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Arrival time</th>
          <th>Departure time</th>
          <th>Tolerance</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @departments.each do |department| %>
        <tr>
          <td><%= department.name %></td>
          <td><%= department.description %></td>
          <td><%= department.arrival_time.strftime("%H:%M")  %></td>
          <td><%= department.departure_time.strftime("%H:%M")  %></td>
          <td><%= department.tolerance %></td>
          <td><%= link_to 'Show', department %></td>
          <td><%= link_to 'Edit', edit_department_path(department) %></td>
          <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>
<%= link_to 'New Department', new_department_path %>